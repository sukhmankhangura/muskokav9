<!-- table -->
<br>
<a href="/add-camper">Add A New Camper</a>
<table class="table table-striped table-hover">
    <tr>
        <th class="text-center">First Name</th>
        <th class="text-center">Last Name</th>
        <th class="text-center">Profile</th>
        <th class="text-center">Actions</th>
    </tr>
    <% for (var i = 0; i < camper.length; i++) { %>
    <tr>
        <td><%= camper[i].firstName %></td>
        <td><%= camper[i].lastName %></td>



        <td class="text-center"><a href="/profile/<%= camper[i]._id %>"><img src="../images/icons/profile.png"></a></td>
        <td class="text-center">
            <a href="/edit/<%= camper[i]._id %>" class="btn btn-info">Edit</a>
            <a href="/camper-delete/<%= camper[i]._id %>" class="btn btn-danger confirmation">Delete</a>
        </td>
    </tr>
    <% } %>
</table>

